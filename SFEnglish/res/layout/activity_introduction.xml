<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/practice_back"
        android:textColor="@android:color/black"
        android:textSize="@dimen/content_size"  />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:gravity="center">

        <ImageView
            android:id="@+id/ivLifeA"
            android:layout_width="@dimen/practice_course_object_pic_width"
            android:layout_height="@dimen/practice_course_object_pic_height"
            android:background="@android:color/white"
            android:contentDescription="@string/default_content_description"
            android:src="@drawable/tiger" />

        <ImageView
            android:id="@+id/ivLifeB"
            android:layout_width="@dimen/practice_course_object_pic_width"
            android:layout_height="@dimen/practice_course_object_pic_height"
            android:background="@android:color/white"
            android:contentDescription="@string/default_content_description"
            android:src="@drawable/ant" />
    </RelativeLayout>

    <TextView
		android:id="@+id/tvDescription"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/tiger_des"
		android:textSize="@dimen/content_size"
		android:textColor="@android:color/white"
		/>
</LinearLayout>